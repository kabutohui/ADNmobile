<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:title="ADNmobile"
        android:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0bcaf9"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <Button
            android:id="@+id/btn_dataCollect"
            android:text="数据采集模块"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:background="#0bcaf9" />
        <Button
            android:id="@+id/btn_switch"
            android:text="开关控制模块"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:background="#0bcaf9" />
        <Button
            android:id="@+id/btn_function"
            android:text="功能响应模块"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#0bcaf9" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <cn.edu.xidian.adnmobile.CanvasView
            android:id="@+id/action_editor_canvas_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <ListView
            android:id="@+id/list_data"
            android:visibility="gone"
            android:layout_width="140dp"
            android:layout_height="match_parent">
        </ListView>

        <ListView
            android:id="@+id/list_switch"
            android:visibility="gone"
            android:layout_width="140dp"
            android:layout_height="match_parent">
        </ListView>

        <ListView
            android:id="@+id/list_function"
            android:visibility="gone"
            android:layout_width="140dp"
            android:layout_height="match_parent">
        </ListView>


        <ImageView
            android:id="@+id/iv_function"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/iv_rectangle1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_function"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/iv_rectangle1"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/iv_rectangle2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_switch"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/iv_datacollect"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/iv_rectangle2"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/iv_trash"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_reset"
            android:layout_above="@+id/iv_trash"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/iv_trash"
            android:layout_alignStart="@+id/iv_trash" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_zoomout"
            android:layout_above="@+id/iv_reset"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/iv_reset"
            android:layout_alignStart="@+id/iv_reset" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_zoomin"
            android:layout_above="@+id/iv_zoomout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/iv_zoomout"
            android:layout_alignStart="@+id/iv_zoomout" />

        <TextView
            android:id="@+id/tv_dataCollect"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="323dp"
            android:layout_marginLeft="205dp"/>

        <TextView
            android:id="@+id/tv_switch"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="213dp"
            android:layout_marginLeft="205dp"/>

        <TextView
            android:id="@+id/tv_funciton"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="103dp"
            android:layout_marginLeft="205dp"/>


    </RelativeLayout>

    </LinearLayout>
</LinearLayout>
